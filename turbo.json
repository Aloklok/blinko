{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env"
  ],
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "PORT",
    "BACKEND_PORT",
    "FRONTEND_PORT",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "S3_ENDPOINT",
    "S3_REGION",
    "S3_BUCKET",
    "S3_ACCESS_KEY",
    "S3_SECRET_KEY",
    "UPLOAD_PATH"
  ],
  "tasks": {
    "prisma:generate": {
      "inputs": [
        ".env"
      ],
      "cache": false,
      "outputs": [
        "server/generated/client/**"
      ]
    },
    "build:iconify:icons": {
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.jsx",
        "src/**/*.js"
      ],
      "outputs": [
        "src/components/Common/Iconify/icons.tsx"
      ],
      "cache": false
    },
    "build:web": {
      "inputs": [
        ".env"
      ],
      "dependsOn": [
        "build:iconify:icons",
        "^build:web",
        "prisma:generate"
      ],
      "outputs": [
        "dist/**",
        "../dist/**"
      ]
    },
    "build:seed": {
      "inputs": [
        "prisma/seed.ts"
      ],
      "outputs": [
        "dist/prisma/**"
      ]
    },
    "dev": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env"
      ],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": [
        "build:web"
      ]
    },
    "lint": {},
    "test": {
      "dependsOn": [
        "build:web"
      ]
    }
  }
}