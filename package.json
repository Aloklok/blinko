{
  "name": "blinko-monorepo",
  "version": "1.8.5",
  "private": true,
  "packageManager": "bun@1.2.8",
  "workspaces": [
    "app",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "cd app && bun run tauri dev",
    "build:web": "turbo run build:web",
    "test": "turbo run test",
    "start:server:production": "ncp dist/public server/public && cd server && bun run start",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:backend": "dotenv turbo run dev --filter=@blinko/backend",
    "dev:frontend": "dotenv turbo run dev --filter=@blinko/frontend",
    "postinstall": "turbo run prisma:generate --filter=@blinko/backend",
    "setup": "bun install",
    "prisma:generate": "prisma generate --sql --schema=prisma/schema.prisma",
    "prisma:migrate:dev": "cd prisma && prisma migrate dev",
    "prisma:migrate:deploy": "cd prisma && prisma migrate deploy",
    "prisma:studio": "cd prisma && prisma studio",
    "build:seed": "tsup prisma/seed.ts --outDir dist",
    "seed": "bun dist/seed.js",
    "build:blinko:types": "tsc -p tsconfig.blinko.json"
  },
  "devDependencies": {
    "@types/lru-cache": "^7.10.10",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.56.0",
    "ncp": "^2.0.0",
    "prettier": "^3.2.5",
    "prisma": "7.3.0",
    "turbo": "latest",
    "typescript": "~5.6.2",
    "vite-plugin-pwa": "^1.0.0",
    "workbox-window": "^7.3.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@heroui/react": "2.8.8",
    "@prisma/adapter-pg": "7.3.0",
    "@prisma/client": "7.3.0",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.34.0",
    "i18next": "25.8.4",
    "lru-cache": "^11.1.0",
    "pg": "^8.18.0",
    "react-i18next": "^15.4.1",
    "react-simple-pull-to-refresh": "^1.3.3",
    "uint8array-extras": "^1.5.0",
    "wait-on": "^8.0.3"
  }
}